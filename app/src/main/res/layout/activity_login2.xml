<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <!-- Main Card View -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="5dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:radius="10dp">

                <!-- Logo and Title Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- App Logo -->
                    <ImageView
                        android:id="@+id/logoImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="App Logo"
                        android:src="@drawable/logo_clean" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login Here"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/darkblue"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <!-- TabLayout -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/loginTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabIndicatorColor="@color/green"
                    app:tabTextColor="@color/border_grey"
                    app:tabSelectedTextColor="@color/green">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Login" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reception Login" />

                </com.google.android.material.tabs.TabLayout>



                <!-- ID and Password Input Fields -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <!-- Registration Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/registrationIDLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:passwordToggleEnabled="false">


                        <EditText
                            android:id="@+id/registrationNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Registration ID"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#3F51B5"
                            android:textColorHint="#4CAF50"
                            android:textSize="15sp"
                            app:hintTextAppearance="@style/CustomTextHintStyle" />
                    </com.google.android.material.textfield.TextInputLayout>






                    <!-- Username Input with TextInputLayout -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:passwordToggleEnabled="false">


                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Username"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="#3F51B5"
                            android:textColorHint="#4CAF50"
                            android:textSize="15sp"
                            app:hintTextAppearance="@style/CustomTextHintStyle" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input with Eye Icon -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:hint="Enter  Password"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="#3F51B5"
                            android:textColorHint="#4CAF50"
                            android:textSize="15sp"
                            app:hintTextAppearance="@style/CustomTextHintStyle" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <!-- Login Button -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="#FFFF"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:elevation="2dp"
                    android:paddingVertical="12dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <!-- Register TextView -->
                <TextView
                    android:id="@+id/registerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="#FFFF"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Don't have an account? Register"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
